{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://skyrim-sentinel.dev/schemas/golden-set.json",
	"title": "Sentinel Golden Set",
	"description": "Schema for the curated plugin manifest",

	"type": "object",
	"properties": {
		"version": {
			"type": "string",
			"pattern": "^\\d+\\.\\d+\\.\\d+$"
		},
		"generated": {
			"type": "string",
			"format": "date-time"
		},
		"description": {
			"type": "string"
		},
		"plugins": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"nexusId": { "type": "integer", "minimum": 1 },
					"author": { "type": "string" },
					"category": {
						"type": "string",
						"enum": [
							"core",
							"fixes",
							"framework",
							"ui",
							"utility",
							"graphics",
							"animation",
							"gameplay",
							"camera",
							"audio"
						]
					},
					"description": { "type": "string" },
					"files": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"filename": { "type": "string" },
								"sha256": {
									"type": ["string", "null"],
									"pattern": "^[a-f0-9]{64}$"
								},
								"version": { "type": "string" },
								"size_bytes": { "type": "integer" },
								"status": {
									"type": "string",
									"enum": ["verified", "pending", "revoked"]
								},
								"added": { "type": "string", "format": "date-time" }
							},
							"required": ["filename"]
						}
					}
				},
				"required": ["name", "nexusId"]
			}
		}
	},
	"required": ["version", "plugins"]
}
